@{
    Layout = "";
}
@model WebApp.Models.ViewModels.FinancialEditVM

<form asp-action="Save" asp-controller="Home" method="POST" data-ajax="true" >
    
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @id = "inputAmount", @placeholder = "Amount", @type = "number", @required = "required" })
    </div>

    <div class="form-group">
        @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "datepicker", @placeholder = "Datum", type = "date", @required = "required" })
    </div>

    @Html.DropDownListFor(m => m.PartnerId, Model.partners, new { @class = "form-control", @required = "required" })
    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Save" style="margin-top: 5px;" />
    </div>
</form>